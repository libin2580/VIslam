<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:padding="2dp"



    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"





        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"



            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/Subcategry_audio_thumbnail"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subcategory_title"
                android:gravity="center_vertical"
                android:id="@+id/subcategory_audio_title"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/Subcategry_audio_thumbnail"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subcategory_orator"
                android:textSize="12sp"
                android:id="@+id/subcategory_orator"
                android:layout_toRightOf="@+id/Subcategry_audio_thumbnail"
                android:layout_below="@+id/subcategory_audio_title"
                />

            <Button
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/download"

                android:visibility="visible"
                android:background="@drawable/download__1_"
                android:layout_alignTop="@+id/subcategory_audio_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp" />



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:indeterminate="false" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>