<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_back">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_topa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:minHeight="?attr/actionBarSize"
        android:navigationIcon="@android:color/white"
        app:theme="@style/ToolbarStyle">



    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="0.52"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center|bottom"

                android:background="@mipmap/app_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.83"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bordersecond"
                android:ems="10"

                android:gravity="center|left"
                android:hint="Username"
                android:textSize="@dimen/_12sdp"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bordersecond"
                android:ems="10"
                android:gravity="center|left"
                android:hint="Email"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bordersecond"
                android:ems="10"
                android:textSize="@dimen/_12sdp"
                android:gravity="center|left"
                android:hint="Phone no"
                android:inputType="phone"

                android:paddingLeft="@dimen/_10sdp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/bordersecond"
                android:backgroundTint="#246E46"
                android:gravity="center"
                android:text="SUBMIT"
                android:textAllCaps="true"
                android:textSize="@dimen/_11sdp"
                android:textColor="@android:color/white" />
           <!-- #246E46-->
            <TextView
                android:layout_width="344dp"
                android:layout_height="20dp"
                android:layout_weight="0.45"
                android:gravity="right"
                android:text="Skip"
                android:textColor="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_weight="0.01"
                android:gravity="right"
                android:text="Skip"
                android:layout_marginTop="@dimen/_9sdp"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"></LinearLayout>
    </LinearLayout>

    <!--<ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"


        android:indeterminateDrawable="@drawable/my_wheel"
        android:layout_centerInParent="true" />-->
    <com.tuyenmonkey.mkloader.MKLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mk_type="TwinFishesSpinner"
        android:visibility="gone"
        android:id="@+id/progress_bar"
        app:mk_color="@color/colorPrimary"
        />


</RelativeLayout>