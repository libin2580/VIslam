<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:background="@drawable/audio_new">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:src="@drawable/rvimgsample"
                android:id="@+id/Subcategry_audio_thumbnail"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popup_click"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subcategory_title"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="15dp"
                android:id="@+id/subcategory_audio_title"
                android:textSize="15sp"   />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/lin_download"
                android:layout_width="0dp"
                android:onClick="false"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/download"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:background="@drawable/download__1_"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/view2"
                android:visibility="invisible"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:background="@drawable/tick"
                    />
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

    <ProgressBar android:id="@+id/progress_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="gone" android:indeterminateDrawable="@drawable/my_wheel"  android:layout_centerInParent="true" />

</android.support.v7.widget.CardView>


    </FrameLayout>


