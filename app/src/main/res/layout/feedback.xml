<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_back">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_topa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:minHeight="?attr/actionBarSize"
        android:navigationIcon="@android:color/white"
        app:theme="@style/ToolbarStyle">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"

            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:weightSum="1">
            <EditText
                android:inputType="textMultiLine"
                android:id="@+id/feedback11"
                android:lines="8"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="67dp" />

            <EditText
                android:inputType="textMultiLine"
                android:id="@+id/username"
                android:lines="8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Name"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"

                android:paddingLeft="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bordersecond"

                android:textColor="#000000"



                android:layout_marginBottom="@dimen/_5sdp"
                 />
            <EditText
                android:inputType="textMultiLine"
                android:id="@+id/feedback13"
                android:lines="8"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <EditText
                android:inputType="textMultiLine"
                android:id="@+id/email"
                android:lines="8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Email"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bordersecond"

                android:textColor="#000000"



                android:layout_marginBottom="@dimen/_5sdp"
                />


            <EditText
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="sans-serif-light"
                android:gravity="left|top"
                android:hint="Please type your feedback.."
                android:inputType="textMultiLine"
                android:lines="8"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@drawable/bordersecond"

                android:textColor="#000000"



                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/feedback1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:inputType="textMultiLine"
                android:lines="8"
                android:visibility="invisible" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:textAllCaps="true"
                android:text="SUBMIT"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bordersecond"
                android:backgroundTint="#246E46"
                android:id="@+id/button" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.17"
            android:layout_height="0dp"></LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"


        android:indeterminateDrawable="@drawable/my_wheel"
        android:layout_centerInParent="true" />


</RelativeLayout>